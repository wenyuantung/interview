<Window x:Class="Interview.TControls.Command"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interview.TControls"
        mc:Ignorable="d"
        Title="Command" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Background="Chartreuse" Text="Enable the Copy button.&#x0a;Files: Command.xaml, Command.xaml.cs" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1">
            <Button x:Name="CopyBtn" Command="ApplicationCommands.Copy" HorizontalAlignment="Center" VerticalAlignment="Top"
                    Margin="22, 21, 0, 0">
                Copy
            </Button>
        </StackPanel>
    </Grid>
</Window>